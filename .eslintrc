{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [
    "prettier",
    "lodash-fp"
  ],
  "extends": [
    "react-app",
    "react-app/jest",
    "eslint:recommended",
    "prettier",
    "plugin:lodash-fp/recommended"
  ],
  "rules": {
    "prettier/prettier": "error",
    "testing-library/no-unnecessary-act": "off",
    "testing-library/prefer-find-by": "off",
    "curly": "error",
    "react/jsx-curly-brace-presence": "error"
  }
}
